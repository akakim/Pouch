<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pouch.ui.EventInfoActivity"
    android:windowActionBar="false"
    android:windowNoTitle="true"
    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:id="@+id/showProductTabLayout"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabTextColor="@color/Item_pouch_tab_accent"
            app:tabSelectedTextColor="@color/Item_pouch_tab_accent"
            app:tabIndicatorHeight="0dp"

            >
            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체상품"
                />

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내가 좋아하는물품."
                />
        </android.support.design.widget.TabLayout>
    </android.support.design.widget.AppBarLayout>



    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_product_container"
        >

    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>
