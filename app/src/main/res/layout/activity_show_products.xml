<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    tools:context="com.pouch.ui.ProductsActivity"
    android:theme="@android:style/Theme.DeviceDefault.NoActionBar"
    android:id="@+id/product_activity_navigation_drawer_rootLayout"
    >

<android.support.design.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pouchTabLayoutItem"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:id="@+id/showProductTabLayout"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabTextColor="@color/Item_pouch_tab_accent"
            app:tabSelectedTextColor="@color/Item_pouch_tab_accent"
            app:tabIndicatorHeight="0dp"

            >
            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체상품"
                />

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내가 좋아하는물품."
                />
        </android.support.design.widget.TabLayout>
    </android.support.design.widget.AppBarLayout>



    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pouchTabLayoutItem"
        android:id="@+id/show_product_container"
        >

    </FrameLayout>


</android.support.design.widget.CoordinatorLayout>

    <include
        layout="@layout/navigation_product"
        ></include>
</android.support.v4.widget.DrawerLayout>