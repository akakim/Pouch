<resources>

    <style name="GridLayoutThumbnail">
        <item name="android:layout_width">@android:dimen/thumbnail_width</item>
        <item name="android:layout_height">@android:dimen/thumbnail_height</item>
        <item name="android:minWidth">@android:dimen/thumbnail_width</item>
        <item name="android:minHeight">@android:dimen/thumbnail_height</item>
    </style>

    <style name="NavDrawerRowItemText" parent="TextAppearance.AppCompat.Body2">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/nav_drawer_item_text_selected</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@color/navigation_drawer_background</item>
    </style>

    <style name="NavDrawerRowLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/nav_drawer_row_item_background</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="NavDrawerRowLayout.Main">
        <item name="android:tag">@string/tag_nav_drawer_main_entry</item>
    </style>


    <style name="pouchMenuLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:layout_gravity">start</item>

    </style>
    <!-- Base application theme.
        using only v11 이상.
    -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:actionBarStyle">@style/DarkActionBar</item>
    </style>

    <style name="DarkActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#99000000</item>
    </style>


    <style name="Animations"/>

    <!-- PopDownMenu -->
    <style name="Animations.PopDownMenu"/>
    <style name="Animations.PopDownMenu.Left">
        <item name="@android:windowEnterAnimation">@anim/grow_from_topleft_to_bottomright</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottomright_to_topleft</item>
    </style>


    <style name="Animations.PopDownMenu.Right">
        <item name="@android:windowEnterAnimation">@anim/grow_from_topright_to_bottomleft</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottomleft_to_topright</item>
    </style>


    <style name="Animations.PopDownMenu.Center">
        <item name="@android:windowEnterAnimation">@anim/grow_from_top</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottom</item>
    </style>

    <!-- PopUpMenu -->


    <style name="Animations.PopUpMenu"/>


    <style name="Animations.PopUpMenu.Left">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottomleft_to_topright</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_topright_to_bottomleft</item>
    </style>


    <style name="Animations.PopUpMenu.Right">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottomright_to_topleft</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_topleft_to_bottomright</item>
    </style>


    <style name="Animations.PopUpMenu.Center">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottom</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_top</item>
    </style>

<!-- For Kakao Style -->
    <style name="button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/color6</item>
        <item name="android:textSize">16sp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">57dp</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="com_kakao_profile_property_value" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">57dp</item>
        <item name="android:layout_marginLeft">16sp</item>
        <item name="android:layout_marginRight">16sp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">15sp</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">@color/color2</item>
        <item name="android:textColor">@color/color3</item>
        <item name="android:background">@drawable/selector_editbox_bg</item>
    </style>

    <style name="CustomProgressDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>
