<resources>

    <style name="NavDrawerRowItemText" parent="TextAppearance.AppCompat.Body2">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/nav_drawer_item_text_selected</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@color/navigation_drawer_background</item>
    </style>

    <style name="NavDrawerRowLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/nav_drawer_row_item_background</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="NavDrawerRowLayout.Main">
        <item name="android:tag">@string/tag_nav_drawer_main_entry</item>
    </style>


    <style name="pouchMenuLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:layout_gravity">start</item>

    </style>
    <!-- Base application theme.
        using only v11 이상.
    -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:actionBarStyle">@style/DarkActionBar</item>
    </style>

    <style name="DarkActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#99000000</item>
    </style>


</resources>
